<main class="top">
  <% cache('home/top_section') do %>
    <div class="jumbotron jumbotron-top">
      <div class="hero-header px-lg-4 ps-2 pe-0">
        <div class="row">
          <div class="first-section col-lg-1 col-xs-0 px-lg-0">
            <div class="images">
              <%= image_pack_tag 'hero_header/hero_header1.jpeg', class: 'image py-1 w-100 h-50 d-sm-initial d-xs-none', alt: 'ヒーローヘッダー画像', loading: 'lazy' %>
              <%= image_pack_tag 'hero_header/hero_header2.jpeg', class: 'image py-1 w-100 h-50 d-sm-initial d-xs-none', alt: 'ヒーローヘッダー画像', loading: 'lazy' %>
            </div>
            <div class="responsive-images row h-100 d-lg-none">
              <div class="col-4">
                <%= image_pack_tag 'hero_header/hero_header1.jpeg', class: 'image py-1 w-100', alt: 'ヒーローヘッダー画像', loading: 'lazy' %>
              </div>
              <div class="col-4">
                <%= image_pack_tag 'hero_header/hero_header2.jpeg', class: 'image py-1 w-100', alt: 'ヒーローヘッダー画像', loading: 'lazy' %>
              </div>
              <div class="col-4">
                <%= image_pack_tag 'hero_header/hero_header4.jpeg', class: 'image py-1 w-100', alt: 'ヒーローヘッダー画像', loading: 'lazy' %>
              </div>
            </div>
          </div>
          <div class="second-section col-lg-5 col-8">
            <div class="contents m-auto w-md-75">
              <p class="my-1 my-md-3 text-lg-center text-pink">日本最大級の介護レクリエーションマッチングサービス</p>
              <h3 class="top-message my-md-3 fw-bold text-dark">利用者さんのやりたい介護レクやイベントの依頼先が見つかる</h3>

              <div class='row my-3 d-lg-none'>
                <div class='col-6'>
                  <div class="py-1 my-1 text-center feature w-100 d-inline-block">
                    <p class='my-0 title fw-light'>レク・郵送キット</p>
                    <p class='my-0 content fw-bold'>約300種類</p>
                  </div>
                  <div class="py-1 my-1 text-center feature w-100 d-inline-block">
                    <p class='my-0 title fw-light'>登録介護施設数</p>
                    <p class='my-0 content fw-bold'>2000種類</p>
                  </div>
                </div>
                <div class='d-flex align-items-center col-6'>
                  <div class="py-1 my-1 text-center feature w-100 d-inline-block">
                    <p class='my-0 title fw-light'>実施回数</p>
                    <p class='my-0 content fw-bold'>7000回</p>
                  </div>
                </div>
              </div>

              <div class='feature_space row my-3'>
                <div class='col-lg-4'>
                  <div class="feature text-center py-md-2 w-100 d-inline-block">
                    <p class='my-0 title fw-light'>レク・郵送キット</p>
                    <p class='content my-0 fw-bold'>約300種類</p>
                  </div>
                </div>
                <div class='col-lg-4'>
                  <div class="feature text-center py-md-2 w-100 d-inline-block">
                    <p class='my-0 title fw-light'>登録介護施設数</p>
                    <p class='content my-0 fw-bold'>2000種類</p>
                  </div>
                </div>
                <div class='col-lg-4'>
                  <div class="feature text-center py-md-2 w-100 d-inline-block">
                    <p class='my-0 title fw-light'>実施回数</p>
                    <p class='content my-0 fw-bold'>7000回</p>
                  </div>
                </div>
              </div>
              <div class='text-center'>
                <%= link_to 'レクを一覧から探す', customers_recreations_path, class: 'btn bg-pink text-white my-md-4 px-md-4 py-md-3 fw-bold rounded-3' %>
              </div>
            </div>
          </div>
          <div class="third-section col-lg-4 col-xs-0">
            <%= image_pack_tag 'hero_header/hero_header3.jpeg', class: 'image py-1 h-100 w-100', alt: 'ヒーローヘッダー画像', loading: 'lazy' %>
          </div>
          <div class="fourth-section col-lg-2 col-4 px-lg-0">
            <%= image_pack_tag 'hero_header/hero_header4.jpeg', class: 'image py-1 w-100 responsive-hidden-img', alt: 'ヒーローヘッダー画像', loading: 'lazy' %>
            <%= image_pack_tag 'hero_header/hero_header5.jpeg', class: 'image py-1 w-100', alt: 'ヒーローヘッダー画像', loading: 'lazy' %>
            <%= image_pack_tag 'hero_header/hero_header3.jpeg', class: 'image py-1 w-100 d-lg-none', alt: 'ヒーローヘッダー画像', loading: 'lazy' %>
            <%= image_pack_tag 'hero_header/hero_header6.jpeg', class: 'image py-1 w-100', alt: 'ヒーローヘッダー画像', loading: 'lazy' %>
          </div>
        </div>
      </div>
      <div class="container px-0 my-2">
        <div class="row">
          <div class="col-md">
            <%= link_to "https://everyplus.jp/new_user", target: '_blank', rel: 'noopener' do%>
              <%= image_pack_tag 'new_user.png', class: 'w-100', alt: '初めての方へ', loading: 'lazy' %>
            <% end %>
          </div>
          <div class="col-md">
            <%= link_to "https://everyplus.jp/plan", target: '_blank', rel: 'noopener' do%>
              <%= image_pack_tag 'plan.png', class: 'w-100', alt: 'ご利用施設の活用例', loading: 'lazy' %>
            <% end %>
          </div>
        </div>
        <%= render 'shared/home/categories' %>
        <%= render 'shared/home/tags', tags: @tags %>
      </div>
    </div>
  <% end %>

  <article class="container px-0 pt-4">
    <div class="row py-3">
      <div class="col-12">
        <h5 class="mt-5 text-black font-weight-bold">タダカヨ様イベント参加施設様　キャンペーン対象無料レク</h5>
      </div>
    </div>
    <div class="row">
      <% @trial_recs.each do |rec| %>
        <%= render 'shared/home/card', rec: rec %>
      <% end %>
    </div>
  </article>

  <article class="container px-0 pt-4">
    <% cache('home/yoshimoto_section') do %>
      <%= link_to customers_recreations_path(q: { tags_name_eq: '吉本興業' }) do %>
        <%= image_pack_tag 'yoshimoto.png', class: 'w-100', alt: '吉本レク画像', loading: 'lazy' %>
      <% end %>
    <% end %>
    <div class="row py-2">
      <div class="col-12">
        <h5 class="mt-5 text-black font-weight-bold">よしもとのオンラインレク</h5>
      </div>
    </div>
    <div class="row">
      <% @yoshimoto_recs.each do |rec| %>
        <%= render 'shared/home/card', rec: rec %>
      <% end %>
    </div>
  </article>

  <article class="container px-0 pt-4">
    <div class="row py-2">
      <div class="col-12">
        <h5 class="mt-5 text-black font-weight-bold">10,000円以下×オンライン</h5>
      </div>
    </div>
    <div class="row">
      <% @less_than_ten_thousand_yen_recs.each do |rec| %>
        <%= render 'shared/home/card', rec: rec %>
      <% end %>
    </div>
  </article>
</main>

