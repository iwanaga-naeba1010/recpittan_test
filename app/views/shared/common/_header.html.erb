            <li class="nav-item">
              <%= link_to mypage_index_path, class: 'nav-link' do %>
                <span class="material-icons mypage">
                    account_circle
                </span> マイページ
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to '新規登録', new_user_registration_path, class: 'nav-link link-join' %>
