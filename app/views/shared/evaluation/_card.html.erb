<div class="card evaluation-card rounded border shadow h-100 mt-3">
  <div class="card-body position-relative">
    <h6 class="text-black">
      <span>
        <%= image_pack_tag 'evaluation_icon.svg', id: "hamburger", class: "logo-navbar", width: "30", height: "30" %>
      </span>
      <%= evaluation.report.order.user.company.facility_name %>(<%= evaluation.report.order.user.company.genre_text %>)
    </h6>
    <p class="my-2 text-black"><%= evaluation.message.truncate(140, omission: '...') %></p>
    <p class="evaluation-date mb-3 position-absolute bottom-0"><%= evaluation.created_at.strftime('%Y/%m/%d') %></p>
  </div>
  <div class="card-footer bg-light p-3 w-100 h-25">
    <div class="d-flex">
      <div class="pe-0">
        <%= image_tag evaluation.recreation.recreation_images.sliders.first&.image.to_s, width: '70', height: '50', class: 'rounded', loading: 'lazy' %>
      </div>
      <div class="ps-0">
        <%= link_to evaluation.recreation.title, customers_recreation_path(evaluation.report.order.recreation.id), class: 'evaluation-title mb-0 ms-2 text-decoration-none' %>
      </div>
    </div>
  </div>
</div>
