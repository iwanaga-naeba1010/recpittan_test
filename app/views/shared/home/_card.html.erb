      <p class="ms-1 mb-0">開催回数<%= rec.number_of_recreations_held + rec.number_of_past_events %>件</p>
    </div>
    <div class="d-flex align-items-center">
      <div class="card-body card-body-tag px-2 py-1">
        <%= tag_to_html(rec) %>
      </div>
      <% if current_user&.role&.customer? %>
        <div class="me-1" id='favoriteIcon_<%= rec.id %>'></div>
      <% end %>
    </div>
    <div class="card-body card-body-info px-2 py-1">
      <div class="d-md-flex mb-2 align-items-center">
        <div class="">
          <i class="material-icons every">query_builder</i>
          <span class="value"><%= rec.minutes %></span>
        </div>
        <% if rec.user.approval_status.approved? %>
          <div class="mx-md-2">
            <i class="fas fa-solid fa-check"></i>
            <span class="value">面談済</span>
          </div>
        <% end %>
        <div class="ms-md-auto">
          <% if rec.is_public_price %>
            <span class="value"><%= price_pipe(rec&.price, current_user) %></span>
          <% else %>
            <span class="value">お問い合わせ下さい</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
