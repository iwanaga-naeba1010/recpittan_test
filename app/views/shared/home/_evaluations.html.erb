<h5 class="my-3 font-weight-bold text-black text-center">ご利用した施設の声</h5>
<div class="evaluation-box swiper pb-5">
  <div class="swiper-wrapper">
    <% Evaluation.where(is_public: true).where.not(message: '').where.not(message: 'システムの自動投稿').latest(10).each do |evaluation| %>
      <div class="card evaluation-card swiper-slide rounded border shadow">
        <div class="card-body position-relative">
          <h6 class="text-black">
          <span>
          <svg width="36" height="28" viewBox="0 0 36 28" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M4 28.0005C1.79086 28.0005 0 26.2097 0 24.0005V15.658C0 6.95051 1.64928 3.79596 8.45027 0.219596C9.20354 -0.176517 10.1258 -0.0239489 10.7314 0.574089L11.6596 1.49078C12.6986 2.51697 12.308 4.25571 11.0115 4.92801C7.21347 6.89762 6.48004 9.28821 6.48004 15.658H11.4287C13.6378 15.658 15.4287 17.4489 15.4287 19.658V24.0005C15.4287 26.2097 13.6378 28.0005 11.4287 28.0005H4ZM24.5713 28.0006C22.3622 28.0006 20.5713 26.2097 20.5713 24.0006V15.658C20.5713 6.95052 22.2206 3.79598 29.0216 0.219612C29.7749 -0.176501 30.6972 -0.0239332 31.3027 0.574104L32.2309 1.4908C33.2699 2.51699 32.8793 4.25573 31.5829 4.92803C27.7848 6.89764 27.0514 9.28823 27.0514 15.658H32C34.2092 15.658 36 17.4489 36 19.658V24.0006C36 26.2097 34.2092 28.0006 32 28.0006H24.5713Z" fill="#E83E8C"/>
          </svg>
          </span><%= evaluation.report.order.user.company.facility_name %></h6>
          <p class="my-2 text-black"><%= evaluation.message.truncate(140, omission: '...') %></p>
          <p class="evaluation-date mb-3 position-absolute bottom-0"><%= evaluation.created_at.strftime('%Y/%m/%d') %></p>
        </div>
        <div class="card-footer bg-light p-3 w-100 h-25">
          <div class="d-flex">
            <div class="pe-0">
              <%= image_tag evaluation.report.order.recreation.recreation_images.sliders.first&.image.to_s, width: '70', height: '50', class: 'rounded', loading: 'lazy' %>
            </div>
            <div class="ps-0">
              <%= link_to evaluation.report.order.recreation.title ,customers_recreation_path(evaluation.report.order.recreation.id), class: 'evaluation-title mb-0 ms-2 text-decoration-none' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="swiper-button-prev">
    <p class="swiper-button p-3 rounded-circle text-white"><i class="fa-solid fa-arrow-left"></i></p>
  </div>
  <div class="swiper-button-next">
    <p class="swiper-button p-3 rounded-circle text-white"><i class="fa-solid fa-arrow-right"></i></p>
  </div>
  <div class="pagination pb-4">
    <div class="swiper-pagination"></div>
  </div>
</div>
