<article class="container categorys d-none d-lg-block shadow">
  <div class="d-flex justify-content-around">
    <% categories.each do |category| %>
      <div class="category">
        <a href="{{catalogCategoryUri frontName}}" class="card border-0 text-decoration-none recreation-category-item">
          <div class="card-body zoom px-0">
            <picture>
              <%= image_tag category.image.to_s, class: "rounded-circle", alt: "" %>
            </picture>
            <h3 class="card-title pt-3"><%= category.name %></h3>
            <h6 class="card-subtitle pt-2 mb-2 text-muted"><%= simple_format category.text %></h6>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</article>
