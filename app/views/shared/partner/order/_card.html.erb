<%= link_to chat_partners_order_path(order.id) do %>
  <div class="order-item my-2 border-bottom p-3">
    <div class="">
      <h5 class="text-black"><%= order.user.company.facility_name.truncate(20) %></h5>
    </div>
    <div class="mb-2 recreation-title">
      <p><%= order.recreation_title %></p>
    </div>
    <div class="chat-preview d-flex align-items-center p-2">
      <%= image_pack_tag 'chat.svg', class: "logo-navbar", width: "15", height: "15" %>
      <p class="ms-2 mb-0 text-black"><%= order.chats.last.message.truncate(20) %></p>
      <p class="ms-auto mb-0 last-chat-sended-at"><%= order.chats.last.created_at.strftime("%m/%d") %></p>
    </div>
    <div class="d-flex justify-content-between align-items-center mt-2 mb-2">
      <div class="status">
        <span class="p-1">
          <%= I18n.t("partner.order.status.#{order.status}") %>
        </span>
      </div>
      <%= image_pack_tag 'order_menu.svg', class: "logo-navbar", width: "15", height: "15" %>
    </div>
  </div>
<% end %>