<div class="order-item my-2 border-bottom p-3 position-relative" id="order-<%= order.id %>">
  <%= link_to chat_partners_order_path(order.id), class: 'd-block' do %>
    <div>
      <h5 class="text-black"><%= order.user.company.facility_name.truncate(20) %></h5>
    </div>
    <div class="mb-2 recreation-title">
      <p><%= order.recreation_title %></p>
    </div>
    <div class="chat-preview d-flex align-items-center p-2">
      <%= image_pack_tag 'chat.svg', class: "logo-navbar", width: "15", height: "15" %>
      <p class="ms-2 mb-0 text-black"><%= order.chats.last.message.truncate(20) %></p>
      <p class="ms-auto mb-0 last-chat-sended-at"><%= order.chats.last.created_at.strftime("%m/%d") %></p>
    </div>
  <% end %>
  <div class="d-flex justify-content-between align-items-center mt-2 mb-2">
    <div class="status <%= order.status %>">
      <span class="status__label p-1">
        <%= I18n.t("partner.order.status.#{order.status}") %>
      </span>
    </div>
    <div class="order_menu_container" id="order-menu-<%= order.id %>">
      <%= image_pack_tag 'order_menu.svg', class: "order_menu pointer", width: "15", height: "15" %>
    </div>
  </div>
  <div class="order-menu-modal shadow rounded p-3 position-absolute bg-white" id="order-menu-modal-<%= order.id %>">
    <button type="button" class="remove-button" data-bs-toggle="modal" data-bs-target="#confirm-delete-modal-<%= order.id %>">
      <%= image_pack_tag 'dust_box.svg', class: "order_menu pointer", width: "15", height: "15" %>
      削除
    </button>
  </div>
</div>

<!-- 確認モーダル -->
<div class="modal fade" id="confirm-delete-modal-<%= order.id %>" tabindex="-1" aria-labelledby="confirmDeleteModalLabel-<%= order.id %>" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header pb-0">
        <h5 class="modal-title text-black fw-bold" id="confirmDeleteModalLabel-<%= order.id %>">案件を削除</h5>
      </div>
      <div class="modal-body text-black">
        案件を削除すると案件が見ることができなくなりますがよろしいでしょうか？
      </div>
      <div class="px-3 pb-2">
        <%= button_to partners_order_path(order), 
            params: { order: { is_open: false } }, 
            method: :delete, 
            class: "btn btn-primary fw-bold w-100 py-2 mb-1" do %>
          削除
        <% end %>
        <button type="button" class="btn btn-white text-primary fw-bold w-100 py-2" data-bs-dismiss="modal">キャンセル</button>
      </div>
    </div>
  </div>
</div>
