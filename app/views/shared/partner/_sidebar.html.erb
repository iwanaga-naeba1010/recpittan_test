<div id="nav" class="sidebar">
  <div class="header">
    <h2 class="p-2">
      Menu
    </h2>
  </div>
  <div class="p-2">
    <%= link_to partners_path(is_open: true) do %>
      <div class="sidebar-wrapper my-2 border-bottom">
        <div class="lect_item">
          <i class="fas fa-home fa-lg"></i>
        </div>
        <div class="right_item">開催のご相談</div>
      </div>
    <% end %>

    <%= link_to partners_path(is_open: false) do %>
      <div class="sidebar-wrapper my-2 border-bottom">
        <div class="lect_item">
          <i class="fas fa-door-closed"></i>
        </div>
        <div class="right_item">終了した開催のご相談</div>
      </div>
    <% end %>

    <%= link_to partners_path(is_accepted: true, is_open: true) do %>
      <div class="sidebar-wrapper my-2 border-bottom">
        <div class="lect_item">
          <i class="far fa-calendar fa-lg"></i>
        </div>
        <div class="right_item">
          開催決定済の案件
        </div>
      </div>
    <% end %>

    <%= link_to partners_recreations_path do %>
      <div class="sidebar-wrapper my-2 border-bottom">
        <div class="lect_item">
          <i class="far fa-calendar fa-lg"></i>
        </div>
        <div class="right_item">
          レクリエーション一覧
        </div>
      </div>
    <% end %>

    <% if current_user.bank_account.blank? %>
      <%= link_to edit_partners_bank_account_path(current_user.bank_account) do %>
        <div class="sidebar-wrapper my-2 border-bottom">
          <div class="lect_item">
            <i class="fas fa-university fa-lg"></i>
          </div>
          <div class="right_item">銀行口座情報を登録</div>
        </div>
      <% end %>
    <% else %>
      <%= link_to edit_partners_bank_account_path(current_user.bank_account) do %>
      <div class="sidebar-wrapper my-2 border-bottom">
        <div class="lect_item">
          <i class="fas fa-university fa-lg"></i>
        </div>
        <div class="right_item">銀行口座情報を編集</div>
      </div>
      <% end %>
    <% end %>

    <%= link_to 'https://drive.google.com/file/d/1FsBuayCcZDgqD6g6xjpf6Xh0Yxgw4Fgy/view', target: '_blank' do %>
      <div class="sidebar-wrapper my-2 border-bottom">
        <div class="lect_item">
          <i class="far fa-sticky-note fa-lg"></i>
        </div>
        <div class="right_item">利用規約</div>
      </div>
    <% end %>

    <%= link_to destroy_user_session_path, method: 'delete' do %>
      <div class="sidebar-wrapper my-2 border-bottom">
        <div class="lect_item">
          <i class="fas fa-sign-out-alt fa-lg"></i>
        </div>
        <div class="right_item">ログアウト</div>
      </div>
    <% end %>
  </div>
</div>
