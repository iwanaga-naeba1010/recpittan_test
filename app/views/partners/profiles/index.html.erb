<div class="header">
    <h2 class="text-white font-weight-bold p-2">
      プロフィール設定
    </h2>
    <%= render 'shared/partner/sidebar_toggle' %>
</div>

<% @profiles.each do |profile| %>
  <%= link_to edit_partners_profile_path(profile.id) do %>
    <div class="my-2 border-bottom p-3">
      <div class="d-flex">
        <div>
        <% if profile.image? %>
          <%= image_tag profile.image&.to_s, width: 60, height: 60 %>
        <% end %>
        </div>
        <div class="px-2">
          <h5 class="text-dark">
            <%= profile.name %>
          </h5>
          <%= "肩書き/資格/実績情報 #{profile.position}" %>
          <br>
          <%= profile.description.truncate(20) %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<div class="m-3">
  <%= link_to '新規プロフィールを登録', new_partners_profile_path, class: 'btn btn-primary btn-lg btn-block w-100 p-3 mb-2 text-white' %>
</div>
