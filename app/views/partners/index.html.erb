<div class="header">
    <h2 class="text-white font-weight-bold p-2">
      <% if params[:is_accepted] == 'true' %>
        開催決定済みのレク一覧
      <% else %>
          チャット一覧
      <% end %>
    </h2>
    <%= render 'shared/partner/sidebar_toggle' %>
</div>

<% @orders.each do |order| %>
  <%= link_to chat_partners_order_path(order.id) do %>
    <div class="order-wrapper my-2 border-bottom p-3">
      <div class="company_name">
        <h3>

          <%= "#{order.user.company.facility_name} #{order.user.company.name}".truncate(10) %>
          <%= order.user.company.name %>
        </h3>
      </div>
      <div class="partner_name">
        <%= order.recreation_title %>
      </div>
      <div class="status">
        <span class="status__cunsult p-1">
          <%= I18n.t("partner.order.status.#{order.status}") %>
        </span>
      </div>
      <div class="date">
        開催日：<%= dotted_datetime order.start_at %>
      </div>
    </div>
  <% end %>
<% end %>
