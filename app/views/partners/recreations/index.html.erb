<div class="header">
    <h2 class="text-white font-weight-bold p-2">
      レクリエーション一覧
    </h2>
    <%= render 'shared/partner/sidebar_toggle' %>
</div>

<% if @recreations.present? %>
  <% @recreations.each do |recreation| %>
    <%= link_to edit_partners_recreation_path(recreation.id) do %>
      <div class="my-2 border-bottom p-3">
        <div class="company_name">
          <h6 class="text-black font-weight-bold">
            <%= "#{recreation.title} #{recreation.second_title}".truncate(100) %>
          </h6>
        </div>
        <div class="category">
          <p class="my-1"><%= t("enumerize.recreation.category.#{recreation.category}") %></p>
        </div>
        <div class="d-flex">
          <p class="my-1 px-2 d-inline-block rounded border border-<% recreation.status.unapplied? ? 'secondary' : recreation.status.in_progress? ? 'warning' : 'success' %>">
            <%= t("enumerize.recreation.status.#{recreation.status}") %>
          </p>
          <p class="my-1 ms-auto"><%= number_to_currency(recreation.price, unit: "¥", format: "%u %n") %></p>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="m-3">
    <p>まだ登録中のレクはありません</p>
  </div>
<% end %>

<div class="m-3">
  <%= link_to '新規レクを追加', new_partners_recreation_path, class: 'btn btn-primary btn-lg btn-block w-100 p-3 mb-2 text-white' %>
</div>
