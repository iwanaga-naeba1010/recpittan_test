<div class="header">
  <div class="d-flex align-items-center justify-content-center position-relative">
    <h2 class="m-2 pb-2 text-white font-weight-bold position-absolute start-0">
      <%= link_to partners_recreation_path(@recreation.id) do %>
        <i class="fas fa-arrow-left text-white"></i>
      <% end %>
    </h2>
    <h2 class="m-2 pb-2 text-white font-weight-bold">
      レクリーション編集:
      <%= @recreation.title %>
    </h2>
    <%= render 'shared/partner/sidebar_toggle' %>
  </div>
</div>

<div class="p-3">
  <div class="body bg-white border p-3 mb-3">
    <%= render 'partners/recreations/form',
      recreation: @recreation,
      events: @events,
      categories: @categories,
      targets: @targets,
      url: partners_recreation_path(@recreation.id) %>
  </div>
</div>
