<main class="list">
  <div class="container pt-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <%= link_to 'トップ', root_path %>
        </li>
        <% if @tag&.present? %>
          <li class="breadcrumb-item">
            <%= link_to 'プラン一覧', customers_recreations_path %>
          </li>
          <li class="breadcrumb-item active">
            <span class="text-secondary"><%= @tag.name %></span>
          </li>
        <% else %>
          <li class="breadcrumb-item active">
            <span class="text-secondary">一覧</span>
          </li>
        <% end %>
      </ol>
    </nav>
  </div>

  <div class="recreation_plan_index">
    <div class="container">
      <% @recreation_plans.each do |rp| %>
        <div class="row mb-2">
            <div class="col-2">
              <div>
                <%= image_tag rp.recreations.first.recreation_images.sliders&.first&.image&.to_s, width: 130, class: 'rounded w-100' %>
              </div>
            </div>
            <div class="col-10">
              <%= link_to rp.title, customers_recreation_plan_path(rp.id), class: 'text-black fw-bold fw-bold text-decoration-none' %>
              <% total_price = @recreation_plans_with_total_price.find { |plan, price| plan == rp }[1] %>
              <p class="">レク回数: <%= rp.recreations.size %>回 <%= total_price %>~</p>
              <div class="d-flex">
                <% rp.tags.each do |tag| %>
                  <div class="">
                    <p class="d-inline-block px-2 border rounded fw-bold me-2"># <%= tag.name %></p>
                  </div>
                <% end %>
              </div>
            </div>
        </div>
      <% end %>
      <%= paginate @recreation_plans %>
    </div>
  </div>
</main>
