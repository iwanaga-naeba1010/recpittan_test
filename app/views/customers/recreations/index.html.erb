<main class="list">
  <div class="container pt-2">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <%= link_to 'トップ', root_path %>
        </li>
        <li class="breadcrumb-item active">
          <span>一覧</span>
        </li>
      </ol>
    </nav>
  </div>

  <article class="container pt-4 px-0">
    <div class="row">
      <% @recs.each do |rec| %>
        <%= render 'shared/home/card', rec: rec %>
      <% end %>
    </div>
    <%= paginate @recs %>
  </article>
</main>
