<% meta_tags_each_page(
  '300種類を超える業界No1の介護レクリーションマッチングサイト',
  'エブリ・プラスは300種類以上の介護レクリエーションを提供しているマッチングサイトです。複数条件から簡単にレクリエーションを簡単検索・発注することが可能です',
  nil, nil) %>
<%= search_form_for Recreation.ransack(params[:q]), url: customers_recreations_path, class: "d-flex search border-top shadow" do |f| %>
  <div class="mx-auto mb-4 list-search-form px-5">
    <div  class="serach-forms">
      <div class="nav-item px-2 mt-3">
        <p class="font-weight-bold label-size">レクのカテゴリ</p>
        <%= f.select :category_eq, options_for_select(Recreation.category.values.map { |v| [v.text, v.value] }, selected: Recreation.ransack(params[:q]).category_eq), { include_blank: 'すべて' }, class: 'form-select search-select'%>
      </div>
      <div class="nav-item px-2 mt-3">
        <p class="font-weight-bold label-size">レクの形式</p>
        <%= f.select :kind_eq, options_for_select(Recreation.kind.values.map { |v| [v.text, v.value] }, selected: Recreation.ransack(params[:q]).kind_eq), { include_blank: 'すべて' }, class: 'form-select search-select'%>
      </div>
      <div class="nav-item px-2 mt-3">
        <p class="font-weight-bold label-size">レクの金額</p>
        <div class="serach-forms">
          <li class="list-unstyled price-list">
            <div class="input-group mr-sm-2 search-select">
              <span class="input-group-text border-end-0 bg-light">
                <i class="material-icons every">¥</i>
              </span>
              <%= f.text_field :price_gteq, class: 'form-control border-start-0', min: 0, placeholder: '0' %>
            </div>
          </li>
          <span class="text-black-50 mx-5 price-range">-</span>
          <li class="list-unstyled">
            <div class="input-group mr-sm-2 search-select">
              <span class="input-group-text border-end-0 bg-light">
                <i class="material-icons every">¥</i>
              </span>
              <%= f.text_field :price_lteq, class: 'form-control border-start-0', min: 0, placeholder: '100000' %>
            </div>
          </li>
        </div>
      </div>
      <div class="search-bottum">
        <%= f.submit '絞り込む', class: 'btn btn-csecondar text-white float-right mt-5' %>
      </div>
    </div>
  </div>
<% end %>

<main class="list">
  <div class="container pt-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <%= link_to 'トップ', root_path %>
        </li>
        <!-- NOTE: タグがあればタグをパンクズに入れる -->
        <% if @tag&.present? %>
          <li class="breadcrumb-item">
            <%= link_to '一覧', customers_recreations_path %>
          </li>
          <li class="breadcrumb-item active">
            <span class="text-secondary"><%= @tag.name %></span>
          </li>
        <% else %>
          <li class="breadcrumb-item active">
            <span class="text-secondary">一覧</span>
          </li>
        <% end %>
      </ol>
    </nav>
  </div>

  <article class="container pt-4 px-0">
    <div class="row">
      <% @recs.each do |rec| %>
        <%= render 'shared/home/card', rec: rec %>
      <% end %>
    </div>
    <%= paginate @recs %>
  </article>
</main>
