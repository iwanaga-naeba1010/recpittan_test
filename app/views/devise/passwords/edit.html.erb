<main class="auth">
  <div class="container pt-2">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <%= link_to 'トップ', root_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to 'ログイン', new_user_session_path %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
          <span>パスワード再発行</span>
        </li>
      </ol>
    </nav>
  </div>
  <div class="container {{bodyClass}}">
    <div class="row justify-content-center my-5">
      <div class="col-md-8">
        <div class="card p-4">
          <div class="card-body">
            <h5 class="card-title font-24 fw-bold text-center line-height-120 text-ba10">パスワード再発行</h5>
            <p class="text-muted">新しいパスワード</p>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>
              <%= f.input :reset_password_token, as: :hidden %>
              <%= f.full_error :reset_password_token %>

<!--              <div class="input-group mb-3">-->
<!--                <div class="input-group-prepend">-->
<!--                  <span class="input-group-text">-->
<!--                    <span class="material-icons">lock</span>-->
<!--                  </span>-->
<!--                </div>-->
<!--              </div>-->
              <%= f.input :password,
                          label: '新しいパスワード',
                          required: true,
                          autofocus: true,
                          hint: ("#{@minimum_password_length} 文字以上" if @minimum_password_length),
                          input_html: { class: 'form-control string email required w-100' } %>
              <%= f.input :password_confirmation,
                          label: '確認用の新しいパスワード',
                          required: true,
                          input_html: { class: 'form-control string email required w-100' } %>
              <div class="row justify-content-between">
                <div class="col-auto text-center">
                </div>
                <div class="col-md-6 text-center">
                  <%= f.button :submit, '変更', class: 'btn btn-cprimary rounded-pill w-100 font-14 py-3 px-4 font-weight-bold text-white' %>
                </div>
              </div>
              </div>
            <% end %>
            </div>
      </div>
    </div>
  </div>
</main>
