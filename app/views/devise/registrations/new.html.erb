<main class="auth">
  <div class="container pt-2">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{catalogHomeUri}}">トップ</a></li>
        <li class="breadcrumb-item active" aria-current="page"><span>新規登録</span></li>
      </ol>
    </nav>
  </div>

  <div class="container">
    <div class="row justify-content-center my-4">
      <div class="col-md-8">
        <div class="card p-4">
          <div class="card-body">
            <h5 class="card-title text-center">新規登録</h5>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="mb-3">
                <%= f.input :company_name, required: true, input_html: { class: 'form-control ' } %>
              </div>
              <div class="mb-3">
                <%= f.input :facility_name, required: true, input_html: { class: 'form-control ' } %>
              </div>
              <div class="mb-3">
                <%= f.input :name, required: true, input_html: { class: 'form-control ' } %>
              </div>
              <div class="mb-3">
                <%= f.input :name_kana, required: true, input_html: { class: 'form-control ' } %>
              </div>
              <div class="mb-3">
                <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control ', autocomplete: "email" } %>
              </div>
              <div class="mb-3">
                <%= f.input :password, required: true, hint: ("#{@minimum_password_length} 文字以上で入力してください" if @minimum_password_length), input_html: { autocomplete: "new-password" } %>
              </div>
              <div class="mb-3">
                <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" } %>
              </div>

              <div class="form-check mb-3">
                <input class="form-check-input {{formPrivacyPolicyClass}}" type="checkbox" name="privacyPolicy" value="true" {{privacyPolicy}} id="privacyPolicy">
                <label class="form-check-label" for="privacyPolicy">
                  <a href="https://everyplus.jp/policy_privacy" target="_blank" class="clink">利用規約</a>に同意します。
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input {{formPrivacyPolicyClass}}" type="checkbox" name="privacyPolicy" value="true" {{privacyPolicy}} id="privacyPolicy">
                <label class="form-check-label" for="privacyPolicy">
                  <a href="https://everyplus.jp/policy_privacy" target="_blank" class="clink">プライバシーポリシー</a>に同意します。
                </label>
              </div>
              <div class="row justify-content-md-center mt-3">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <div class="col-md-3">
                  <%= f.button :submit, '登録', class: "btn btn-cprimary rounded-pill w-100 font-14 py-3 px-4 font-weight-bold text-white" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%#= render "devise/shared/links" %>
</main>
