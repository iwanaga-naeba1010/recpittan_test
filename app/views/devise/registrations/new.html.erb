<main class="auth">
  <div class="container pt-2">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{catalogHomeUri}}">トップ</a></li>
        <li class="breadcrumb-item active" aria-current="page"><span>新規登録</span></li>
      </ol>
    </nav>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="d-flex justify-content-around">
          <div class="step {{stepOne}}"><span class="no rounded-circle text-center">1</span> <span
            class="step">情報を入力</span>
          </div>
          <div class="step {{stepTow}}"><span class="no rounded-circle text-center">2</span> <span
            class="step">情報を確認</span>
          </div>
          <div class="step {{stepThree}}"><span class="no rounded-circle text-center">3</span> <span
            class="step">メールアドレス認証</span>
          </div>
          <div class="step {{stepFour}}"><span class="no rounded-circle text-center">4</span> <span
            class="step">登録完了</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center my-4">
      <div class="col-md-8">
        <div class="card p-4">
          <div class="card-body">
            <h5 class="card-title text-center">新規登録</h5>
            <form action="{{{uri}}}" class=" mt-3" method="POST">
              <div class="mb-3">
                <label for="inputFacility" class="form-label">
                  <span class="label">法人名 </span>
                  <span class="label required">必須</span>
                </label>
                <input type="text" class="form-control {{companyFormClass}}" id="companyInput" required
                       name="company" value="" placeholder="エブリ・プラス ケアホーム">
                <div class="invalid-feedback">
                  <span>{{companyError}}</span>
                </div>
              </div>

              <div class="form-check mb-3">
                <input class="form-check-input {{formPrivacyPolicyClass}}" type="checkbox"
                       name="privacyPolicy" value="true" {{privacyPolicy}} id="privacyPolicy">
                <label class="form-check-label" for="privacyPolicy">
                  <a href="https://everyplus.jp/policy_privacy" target="_blank"
                     class="clink">プライバシーポリシー</a>に同意します。
                </label>
              </div>
              <div class="row justify-content-md-center mt-3">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <div class="col-md-3">
                  <button type="submit" name="action" value="before" class="btn btn-cprimary rounded-pill w-100 font-14 py-3 px-4 font-weight-bold text-white">
                    <span class="material-icons-text">登録</span>
                  </button>
                </div>

              </div>
            </form>
          </div>
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>



  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-8">
          <div class="d-flex justify-content-around">
            <div class="step {{stepOne}}"><span class="no rounded-circle text-center">1</span> <span
              class="step">情報を入力</span>
            </div>
            <div class="step {{stepTow}}"><span class="no rounded-circle text-center">2</span> <span
              class="step">情報を確認</span>
            </div>
            <div class="step {{stepThree}}"><span class="no rounded-circle text-center">3</span> <span
              class="step">メールアドレス認証</span>
            </div>
            <div class="step {{stepFour}}"><span class="no rounded-circle text-center">4</span> <span
              class="step">登録完了</span>
            </div>
          </div>
        </div>
      </div>
      <div class="row justify-content-center my-4">
        <div class="col-md-8">
          <div class="card p-4">
            <div class="card-body">
              <h5 class="card-title text-center">新規登録</h5>
              <form action="{{{uri}}}" class=" mt-3" method="POST">
                <div class="mb-3">
                  <label for="inputFacility" class="form-label">
                    <span class="label">法人名 </span>
                    <span class="label required">必須</span>
                  </label>
                  <input type="text" class="form-control {{companyFormClass}}" id="companyInput" required
                         name="company" value="" placeholder="エブリ・プラス ケアホーム">
                  <div class="invalid-feedback">
                    <span>{{companyError}}</span>
                  </div>
                </div>

                <div class="mb-3">
                  <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control ', autocomplete: "email" } %>
                </div>

                <div class="form-check mb-3">
                  <input class="form-check-input {{formPrivacyPolicyClass}}" type="checkbox"
                         name="privacyPolicy" value="true" {{privacyPolicy}} id="privacyPolicy">
                  <label class="form-check-label" for="privacyPolicy">
                    <a href="https://everyplus.jp/policy_privacy" target="_blank"
                       class="clink">プライバシーポリシー</a>に同意します。
                  </label>
                </div>
                <div class="row justify-content-md-center mt-3">
                  <input type="hidden" name="_csrf" value="{{csrfToken}}">
                  <div class="col-md-3">
                    <button type="submit" name="action" value="before" class="btn btn-cprimary rounded-pill w-100 font-14 py-3 px-4 font-weight-bold text-white">
                      <span class="material-icons-text">登録</span>
                    </button>
                  </div>

                </div>
              </form>
            </div>
            <div class="card-body">

            </div>
          </div>
        </div>
      </div>
    </div>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</main>
