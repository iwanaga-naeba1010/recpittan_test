<main class="order_memo">
  <% company.company_memos.each_with_index do |memo, i| %>
    <div class="body">
      <div class="message"><%= simple_format memo.body %></div>
      <div class="col-auto date"><%= dotted_datetime memo.created_at %></div>
    </div>
  <% end %>

  <div class="form">
    <%= simple_form_for CompanyMemo.new, url: admin_company_company_memos_path(company) do |f| %>
      <%= f.input :company_id, as: :hidden, input_html: { value: company.id } %>
      <%= f.input :body, label: false %>
      <%= f.submit '送信' %>
    <% end %>
  </div>
</main>
